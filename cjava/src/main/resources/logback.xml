<configuration>
  <appender name="console" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>%d{HH:mm:ss:SSS} %r - %m%n</pattern>
    </encoder>
    <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
      <level>DEBUG</level>
    </filter>
  </appender>
  
   <appender name="FILE" class="ch.qos.logback.core.FileAppender">
    <file>myApp.log</file>
    <append>false</append>
    <encoder>
    <pattern>%d{HH:mm:ss:SSS} %r - %m%n</pattern>
      
    </encoder>
  </appender>
  <!--
  <pattern>%date [%file:%line] %msg%n</pattern> 
  <logger name="com.eric.codejam.multithread" level="OFF"/>
  <logger name="com.eric.codejam.SingleRowSolver" level="OFF" />
   -->
   <logger name="codejam.y2008" level="DEBUG"/>
   <logger name="codejam.y2008.round_emea" level="INFO"/>
   <logger name="codejam.y2009" level="INFO"/>
   <logger name="codejam.y2012" level="INFO"/>
   <logger name="acodejam.y2012.round_2.mountain_view" level="DEBUG" />
   <logger name="codejam.y2010" level="WARN"/>
   <logger name="codejam" level="INFO"/>
   <logger name="codejam.y2011.round_1A.killer_word" level="DEBUG"/>
   <logger name="gcodejam.y2011.round_1A.dominion" level="DEBUG"/>
   
   <logger name="codejam.y2011.round_1C.perfect_harmony" level="INFO"/>
                 
   <logger name="codejam.utils.multithread" level="DEBUG"/>
   <logger name="codejam.utils" level="DEBUG"/>
      <logger name="codejam.utils.main" level="DEBUG"/>
  <root level="${root-level:-DEBUG}">
    <appender-ref ref="console"/>
    <appender-ref ref="FILE"/>
  </root>
</configuration>