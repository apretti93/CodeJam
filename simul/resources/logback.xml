<configuration>
  <appender name="console" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
    <!-- 
    %d{HH:mm:ss:SSS} %r - 
     -->
      <pattern>%m%n</pattern>
    </encoder>
    <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
      <level>DEBUG</level>
    </filter>
  </appender>
  
   <appender name="FILE" class="ch.qos.logback.core.FileAppender">
    <file>C:/codejam/CodeJam/simul/test.txt</file>
    <append>false</append>
    <encoder>
    <pattern>%m%n</pattern>
    <!-- <pattern>%d{HH:mm:ss:SSS} %r - %m%n</pattern> -->
      
    </encoder>
  </appender>
  <!--
  <pattern>%date [%file:%line] %msg%n</pattern> 
  <logger name="com.eric.codejam.multithread" level="OFF"/>
  <logger name="com.eric.codejam.SingleRowSolver" level="OFF" />
   -->
   
   
   <logger name="file" level="ALL" additivity="false">
     <appender-ref ref="FILE"/>
   </logger>
   
   <logger name="main" level="DEBUG"/>
   <logger name="mainOutput" level="DEBUG"/>
   <logger name="pkr.Simulator" level="WARN"/>
   <logger name="pkr.HoleCardsRange" level="INFO"/>
   
      
  <root level="${root-level:-DEBUG}">
    <appender-ref ref="console"/>
  </root>
</configuration>